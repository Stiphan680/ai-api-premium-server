# ==================== SERVER CONFIG ====================
PORT=8000
HOST=0.0.0.0
DEBUG=False

# ==================== API KEYS ====================
# Add your actual API keys here
OPENAI_API_KEY=sk-your-openai-key-here
CLAUDE_API_KEY=sk-claude-your-key-here
GEMINI_API_KEY=your-gemini-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here

# ==================== DATABASE ====================
# PostgreSQL connection (optional)
DATABASE_URL=postgresql://user:password@localhost:5432/ai_server_db

# ==================== CACHE ====================
# Redis for caching (optional)
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=True
CACHE_TTL=3600

# ==================== SECURITY ====================
# API Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
DEFAULT_API_KEY=sk-test-default-key-here

# ==================== LOGGING ====================
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=True
ENABLE_ERROR_LOGGING=True

# ==================== MONITORING ====================
ENABLE_METRICS=True
ENABLE_TRACING=False
SENTRY_DSN=

# ==================== AI MODELS CONFIG ====================
DEFAULT_MODEL=claude-3.5-sonnet
MAX_THINKING_BUDGET=10000
MAX_CONTEXT_TOKENS=200000

# Filter Levels: minimal, standard, strict
DEFAULT_FILTER_LEVEL=minimal

# Response Modes: concise, balanced, detailed, expert
DEFAULT_RESPONSE_MODE=detailed

# ==================== CORS CONFIG ====================
ALLOW_ORIGINS=*
ALLOW_CREDENTIALS=True
ALLOW_METHODS=*
ALLOW_HEADERS=*

# ==================== EXTERNAL SERVICES ====================
# Sentry error tracking (optional)
SENTRY_ENABLED=False
SENTRY_DSN=

# DataDog monitoring (optional)
DATADOG_ENABLED=False
DATADOG_API_KEY=

# ==================== FEATURE FLAGS ====================
ENABLE_EXTENDED_THINKING=True
ENABLE_VISION_ANALYSIS=True
ENABLE_STREAMING=True
ENABLE_CACHING=True
ENABLE_RATE_LIMITING=True
ENABLE_ML_PREDICTIONS=True

# ==================== DEPLOYMENT ====================
# Environment: development, staging, production
ENVIRONMENT=production

# Auto-scaling
MIN_WORKERS=1
MAX_WORKERS=4

# Timeout settings (seconds)
REQUEST_TIMEOUT=300
KEEP_ALIVE_TIMEOUT=5

# ==================== ADVANCED SETTINGS ====================
# Max concurrent requests
MAX_CONCURRENT_REQUESTS=1000

# Request queue size
QUEUE_SIZE=500

# Batch processing
BATCH_SIZE=10
BATCH_TIMEOUT=5

# Token limits per endpoint
MAX_CHAT_TOKENS=200000
MAX_CODE_TOKENS=50000
MAX_ANALYSIS_TOKENS=100000
MAX_IMAGE_TOKENS=8000

# ==================== NOTIFICATION ====================
# Email notifications (optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=

# Slack notifications (optional)
SLACK_WEBHOOK_URL=

# ==================== CUSTOM SETTINGS ====================
# Add your custom environment variables below
# CUSTOM_VAR=value
